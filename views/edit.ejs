<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>

    <div class="container">
        <div class="row">
            <div class="col">
                <div class="jumbotron">
                    <a href="/apis/lists"><button type="button" class="btn btn-outline-dark">Back</button></a>
                    <br>
                    <h3>Form To <%= title %> Citation</h3>
                    <form action="/apis/citation/update" method="post" enctype="application/x-www-form-urlencoded">
                    <%  if(data.length > 0){ %>
                       <%   data.forEach((row) => { %>
                        <div class="form-group">
                            <input type="hidden" name="idCitation" value="<%= row.id%>" id="idCitation" class="form-control">
                        </div>
                            <div class="form-group">
                                <label for="core">Citation Core</label>
                                <input type="text" name="core" value="<%= row.Core %>" id="core" class="form-control" placeholder="Enter the Core of the Citation here">
                            </div>
                            <!--  -->
                            <div class="form-group">
                                <label for="source">Citation Source</label>
                                <input type="text" name="source" value="<%= row.Source %>" id="source" class="form-control" placeholder="The Source Of this Citation">
                            </div>
                            <!--  -->
                            <div class="form-group">
                                <label for="authorid">Id Of The Author</label>
                                <input type="text" name="authorid" value="<%= row.id_Author %>" id="authorid" class="form-control" placeholder="id of the author">
                            </div>
                            <!--  -->
                            <button class="btn btn-danger">Citation Update + </button>
                       <%   }) } %>
                        
                    </form>
                </div>
            </div>
        </div>
    </div>


</body>
</html>